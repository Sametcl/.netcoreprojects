
@model Ogrenci


    <h2>Öğrenci Kayıt</h2>
    <hr />
    <form asp-controller="Ogrenci" asp-action="Create" method="post">
        <div class="mb-3">
            <label asp-for="OgrenciAd" class="form-label">Öğrenci Ad</label>
            <input asp-for="OgrenciAd" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="OgrenciSoyAd" class="form-label">Öğrenci Soyad</label>
            <input asp-for="OgrenciSoyAd" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Eposta" class="form-label">Eposta</label>
            <input asp-for="Eposta" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Telefon" class="form-label">Telefonu</label>
            <input asp-for="Telefon" class="form-control" />
        </div>

        <button type="submit" class="btn btn-secondary">Kaydet</button>
    </form>