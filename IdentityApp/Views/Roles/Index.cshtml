@model IEnumerable<AppRole>
<a class="btn btn-primary" asp-action="Create">Create Role</a>
<hr />

<table class="table table-sm table-bordered">
    <thead>
        <tr>
            <th style="width:250px;">Id</th>
            <th style="width:250px;">RoleName</th>
            <th style="width:250px;">Kullanıcılar</th>
            <th style="width:152px;"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
                <td asp-role-users="@role.Id"></td>
                <td>
                    <a asp-controller="Roles" asp-action="Edit" asp-route-id="@role.Id" class="btn btn-primary btn-sm">Edit</a>

                    <form asp-action="Delete" method="post" onsubmit="return confirm('emin misiniz')" style="display:inline-block;">
                        <input type="hidden" name="id" value="@role.Id" />
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>

                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>