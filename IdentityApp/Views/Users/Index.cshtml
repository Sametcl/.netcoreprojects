@model IEnumerable<AppUser>


<a class="btn btn-primary" asp-controller="Account" asp-action="Create">Create User</a>
<hr />

<table class="table table-sm table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>FullName</th>
            <th>Email</th>
            <th style="width:152px;"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.Fullname</td>
                <td>@user.Email</td>
                <td>
                    <a asp-controller="Users" asp-action="Edit" asp-route-id="@user.Id" class="btn btn-primary btn-sm">Edit</a>

                    <form asp-action="Delete" method="post" onsubmit="return confirm('emin misiniz')" style="display:inline-block;">
                        <input type="hidden" name="id" value="@user.Id" />
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>

                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>