@model Course



<div class="row">
    <div class="col-md-4">
        <img src="~/img/@Model.Image" class="img-fluid rounded" alt="" width="250">
    </div>
    <div class="col-md-8">
        <h5 class="card-title">@Model.Title</h5>
        <p class="card-text">@Model.Description</p>

        <div>
            @if (Model.Tags != null)
            {
                @foreach (var tag in Model.Tags)
                {
                    <span class=" badge bg-primary ">@tag</span>
                }
            }

        </div>
    </div>
</div>

